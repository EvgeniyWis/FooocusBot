# =====================
# Bot Configuration
# =====================

# Telegram Bot API token from @BotFather
BOT_API_TOKEN=your_telegram_bot_token_here

# =====================
# API Keys
# =====================

# RunPod API key for accessing RunPod services
RUNPOD_API_KEY=your_runpod_api_key_here

# Kling API key for AI services
KLING_API_KEY=your_kling_api_key_here

# =====================
# Redis Configuration
# =====================

# Redis server password
REDIS_PASSWORD=your_redis_password_here

# Redis server host (use 'redis' for Docker, 'localhost' for local development)
REDIS_HOST=localhost

# Redis server port (default: 6379)
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# =====================
# Container Configuration
# =====================

# FaceFusion container name (for Docker Compose)
FACEFUSION_CONTAINER_NAME=facefusion-docker-facefusion-cpu-1

# =====================
# Access Control
# =====================

# Admin user ID (for admin commands)
ADMIN_ID=your_admin_telegram_id_here

# List of developer chat IDs (comma-separated, no spaces)
DEV_CHAT_IDS=123456789,987654321

# List of allowed user IDs (comma-separated, no spaces)
ALLOWED_USERS=123456789,987654321

# =====================
# Feature Flags
# =====================

# Enable development mode (True/False)
DEVELOPMENT_MODE=False

# Enable mock mode for testing (True/False)
MOCK_MODE=False

# Enable image upscaling feature (True/False)
UPSCALE_MODE=True

# Enable FaceFusion feature (True/False)
FACEFUSION_MODE=True

# =====================
# Service Endpoints
# =====================

# Base URL for RunPod API
RUNPOD_HOST=https://api.runpod.ai/v2

# RunPod endpoint IDs for different settings
SETTING_1_ENDPOINT_ID=your_endpoint_id_here
SETTING_2_ENDPOINT_ID=your_endpoint_id_here
SETTING_3_ENDPOINT_ID=your_endpoint_id_here
SETTING_4_ENDPOINT_ID=your_endpoint_id_here

# =====================
# Mock Data (for testing)
# =====================

# Mock link for saving images (used in test mode)
MOCK_LINK_FOR_SAVE_IMAGE=https://example.com/mock-image.jpg

# Mock link for saving videos (used in test mode)
MOCK_LINK_FOR_SAVE_VIDEO=https://example.com/mock-video/